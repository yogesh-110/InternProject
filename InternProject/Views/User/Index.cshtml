@model IEnumerable<Intern.Models.User>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
           <h2 class="text-primary">User List

           </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp; Create New User
            </a>
        </div>
    </div>
    <br /><br />


<table class="table table-bordered table-striped" style="width:100%"
   <thead>
       <tr>
           <th>
             User Name
           </th>
           <th>
               Email
           </th>
           <th>
               Action
           </th>
       </tr>
   </thead>
   <tbody>
       @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.UserName
                </td>
                <td width="30%">
                    @obj.Email 
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.UserId" class="btn btn-primary mx-2">
                               <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.UserId " class="btn btn-primary mx-2">
                              <i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
       }
    </tbody>
 </table>
</div>

