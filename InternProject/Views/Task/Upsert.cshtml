@model Intern.Models.ViewModel.TaskVM
<form method="Post" asp-action="Upsert" enctype="multipart/form-data">
 
   <input asp-for="Task.TaskID" hidden /> 
  
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary"> @(Model.Task.TaskID != 0 ? "Update" : "Create") Task</h2>
                    <hr />
                </div>
                @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3">
                    <label asp-for="Task.Title"></label>
                    <input asp-for="Task.Title" class="form-control" />
                    <span asp-validation-for="Task.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Task.Description"></label>
                    <textarea asp-for="Task.Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Task.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Task.DueDate"></label>
                    <input asp-for="Task.DueDate" class="form-control" />
                    <span asp-validation-for="Task.DueDate" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    <label asp-for="Task.IsCompleted"></label>
                    <input type="checkbox" asp-for="Task.IsCompleted" class="form-check-input" />
                    <span asp-validation-for="Task.IsCompleted" class="text-danger"></span>
                </div>

                
                <div class="mb-3 col-6">
                    <label asp-for="Task.CategoryId"></label>
                    <select asp-for="Task.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="Task.UserId"></label>
                    <select asp-for="Task.User.UserId" asp-items="@Model.UserList" class="form-select">
                        <option disabled selected>--Select User--</option>
                    </select>
                    <span asp-validation-for="Task.CategoryId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    @if (Model.Task.TaskID != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <a asp-controller="Task" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Back To Index
                    </a>
                </div>
            </div>
        </div>
       @*  <div class="col-2 pt-4">
            <img src="@Model.Product.ImageUrl"
                 class="w-100" style="border-radius:5px; border:1px solid #bbb9b9" />
        </div> *@
    </div>

</form>